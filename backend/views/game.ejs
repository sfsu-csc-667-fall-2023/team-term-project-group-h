<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
    <link rel="stylesheet" href="/css/game.css" />
    <title><%= title %></title>
    <script src="/scripts/games.js" defer></script>
    <script src="/scripts/chat.js" defer></script>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <h1 class="m-5 text-center">Game <%= id %></h1>

    
    <div class="main-container text-center">
      <div id="instructions">Waiting for room to fill...</div>
      <button type="button" class="btn btn-primary m-6" id="PassButton" data-user="<%= user.id %>">Pass</button>
      <button type="button" class="btn btn-primary m-6" id="PlayButton" data-user="<%= user.id %>">Play</button>
      <div class="d-flex align-content-between flex-wrap">
        <div id="player-1-points" class="m-5"></div>
        <div class="hand player-one-hand d-flex flex-row horizontal-text"></div>
      </div>
      <div class="d-flex align-content-between flex-wrap">
        <div id="player-2-points" class="m-5"></div>
        <div class="hand player-two-hand d-flex flex-row horizontal-text"></div>
      </div>
      <div class="d-flex align-content-between flex-wrap">
        <div id="player-3-points" class="m-5"></div>
        <div class="hand player-three-hand d-flex flex-row horizontal-text"></div>
      </div>
      <div class="d-flex align-content-between flex-wrap">
        <div id="player-4-points" class="m-5"></div>
        <div class="hand player-four-hand d-flex flex-row horizontal-text"></div> 
      </div>


      <div class="d-flex align-items-start">
        <div id="hand-one" class="m-5">HAND 1</div>
        <div class="hand player-one-hand d-flex flex-row horizontal-text"></div>
      </div>
      <div class="d-flex align-items-start">
        <div id="hand-two" class="m-5">HAND 2</div>
        <div class="hand player-one-hand d-flex flex-row horizontal-text"></div>
      </div>
      <div class="d-flex align-items-start">
        <div id="hand-three" class="m-5">HAND3</div>
        <div class="hand player-one-hand d-flex flex-row horizontal-text"></div>
      </div>
      <div class="d-flex align-items-start">
        <div id="hand-four" class="m-5">HAND 4</div>
        <div class="hand player-one-hand d-flex flex-row horizontal-text"></div>
      </div>
        

        <div id="lobbyChat" class="justify-content-center align-items-center">
          <%- include('partials/chat', { roomId: id }) %>
        </div>
      </div>
      
    
    <input
      type="hidden"
      name="game-socket-id"
      id="game-socket-id"
      value="<%= gameSocketId %>"
    />
    <input
      type="hidden"
      name="user-socket-id"
      id="user-socket-id"
      value="<%= userSocketId %>"
    />  
    <%- include('partials/footer') %>

    <template id="card">
      <div class="p-2 bd-highlight card"></div>
    </template>
    
  </body>
</html>

            
        